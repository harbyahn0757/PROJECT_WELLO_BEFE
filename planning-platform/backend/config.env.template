# 건강검진 관리 시스템 환경변수 템플릿

# 환경 설정
DEBUG=true
ENVIRONMENT=development
API_VERSION=v1
API_PREFIX=/api/v1

# 서버 설정
HOST=0.0.0.0
PORT=8082

# 보안 설정
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1

# CORS 설정
CORS_ALLOWED_ORIGINS=["http://localhost:9283"]
CORS_ALLOWED_METHODS=["*"]
CORS_ALLOWED_HEADERS=["*"]

# Google Analytics 설정
GA_TRACKING_ID=your-ga-tracking-id
GA_MEASUREMENT_ID=your-ga-measurement-id

# OpenAI GPT 설정
OPENAI_API_KEY=your-openai-api-key
GPT_MODEL=gpt-4
MAX_TOKENS=2000

# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=health_check_db
DB_USER=admin
DB_PASSWORD=your-db-password

# Redis 설정 (세션 관리용)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# 시스템 기본값
DEFAULT_LAYOUT=vertical
DEFAULT_LANGUAGE=ko
DEFAULT_TIMEZONE=Asia/Seoul

# 검진 설정
MIN_CHECKUP_AGE=19
MAX_CHECKUP_AGE=120
DEFAULT_CHECKUP_DURATION_MINUTES=120

# 알림 설정
NOTIFICATION_SENDER=no-reply@healthcheck.com
SMS_SENDER_NUMBER=15881234

# 파일 업로드 설정
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "application/pdf"]
UPLOAD_PATH=/uploads

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json
LOG_PATH=/var/log/healthcheck

# 카카오 API 설정
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:9283/auth/kakao/callback

# 틸코 API 설정
TILKO_API_HOST=https://api.tilko.net
TILKO_API_KEY=your-tilko-api-key
TILKO_AES_KEY=your-tilko-aes-key
TILKO_AES_IV=your-tilko-aes-iv